{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "webpage:serve": "serve ./docs-src/public",
    "webpage:build": "rollup --config docs-src/rollup.config.js",
    "webpage:watch": "rollup --watch --config docs-src/rollup.config.js",
    "build": "yarn workspace mm-jsr build"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "7.0.8",
    "size-limit": "7.0.8",
    "typescript": "4.6.3"
  },
  "size-limit": [
    {
      "path": "packages/mm-jsr/build/index.js",
      "limit": "20 kB"
    }
  ],
  "packageManager": "yarn@3.2.0"
}
